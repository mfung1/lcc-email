{% macro callout(paddingBottom="text", bold=false, text="", textAlign="left", color="") %}
<mj-text padding="0 0 {{paddingBottom}}" {% if bold %}font-weight="500"{% endif %}{% if textAlign%}align="{{textAlign}}"{% endif %} font-size="36px" line-height="40px">
  <p class="lcc-callout{% if color %} lcc-col-{{color}}{% endif %}">{{text}}</p>
</mj-text>
{% endmacro %}