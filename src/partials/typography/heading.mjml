{% macro heading(paddingBottom="", level="", text="", color="", textAlign="") %}
{% macro heading(level="", text="", color="") %}
<mj-text
  padding="0 0 {%
    if level == "h1"
  %}30px{% elseif level == "h2" %}20px{% else %}10px{%endif%}"
  {% if textAlign %}align="{{textAlign}}"{% endif %}
  font-size="36px"
  line-height="40px">
  <{{level}} class="lcc-heading-{{level}}{% if color %} lcc-col-{{color}}{% endif %}">{{text}}</{{level}}>
</mj-text>
{% endmacro %}